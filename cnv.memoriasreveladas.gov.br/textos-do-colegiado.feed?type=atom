&lt;p&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/II_supremacia_segurana_interna_VE.pdf&quot; target=&quot;_blank&quot;&gt;&lt;/a&gt;&lt;span style=&quot;text-decoration: underline;&quot;&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/II_supremacia_segurana_interna_VE.pdf&quot; target=&quot;_blank&quot;&gt;O Estado ditatorial militar&lt;/a&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/II_supremacia_segurana_interna_VE.pdf&quot; target=&quot;_blank&quot;&gt; &amp;ndash;&lt;/a&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/II_supremacia_segurana_interna_VE.pdf&quot; target=&quot;_blank&quot;&gt; &lt;/a&gt;&lt;strong&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/II_supremacia_segurana_interna_VE.pdf&quot; target=&quot;_blank&quot;&gt;Parte II : Supremacia da seguran&amp;ccedil;a interna&lt;/a&gt;&lt;br /&gt;&lt;br /&gt;&lt;/strong&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/III_silencio_sobre_desaparecidos_VE.pdf&quot; target=&quot;_blank&quot;&gt;&lt;/a&gt;&lt;/span&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/III_silencio_sobre_desaparecidos_VE.pdf&quot; target=&quot;_blank&quot;&gt;&lt;span style=&quot;text-decoration: underline;&quot;&gt;O&lt;/span&gt;&lt;/a&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/III_silencio_sobre_desaparecidos_VE.pdf&quot; target=&quot;_blank&quot;&gt; Estado ditatorial militar &amp;ndash;&lt;/a&gt;&lt;strong&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/III_silencio_sobre_desaparecidos_VE.pdf&quot; target=&quot;_blank&quot;&gt; Parte III : Sil&amp;ecirc;ncio sepulcral sobre desaparecidos&lt;/a&gt;&lt;br /&gt;&lt;/strong&gt;&lt;br /&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/IV_poder_unico_absoluto_incontestavel_VE.pdf&quot; target=&quot;_blank&quot;&gt;O Estado ditatorial militar &amp;ndash;&lt;strong&gt; Parte IV: Poder &amp;uacute;nico, absoluto, incontest&amp;aacute;vel&lt;/strong&gt;&lt;/a&gt;&lt;strong&gt;&lt;br /&gt;&lt;br /&gt;&lt;/strong&gt;&lt;a href=&quot;images/pdf/publicacaoes/claudio/V_coesao_interna_qq_custo_VE.pdf&quot; target=&quot;_blank&quot;&gt;&lt;/a&gt;&lt;a href=&quot;images/pdf/publicacaoes/claudio/V_coesao_interna_qq_custo_VE.pdf&quot; target=&quot;_blank&quot;&gt;&lt;span style=&quot;text-decoration: underline;&quot;&gt;&lt;/span&gt;&lt;/a&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/V_coesao_interna_qq_custo_VE.pdf&quot; target=&quot;_blank&quot;&gt;O Estado ditatorial militar &amp;ndash;&lt;/a&gt;&lt;strong&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/V_coesao_interna_qq_custo_VE.pdf&quot; target=&quot;_blank&quot;&gt; Parte V : Coes&amp;atilde;o interna a qualquer custo&lt;/a&gt;&lt;br /&gt;&lt;br /&gt;&lt;/strong&gt;&lt;a href=&quot;images/pdf/publicacaoes/claudio/VI_obcecado_censura_VE.pdf&quot; target=&quot;_blank&quot;&gt;&lt;/a&gt;&lt;span style=&quot;text-decoration: underline;&quot;&gt;&lt;/span&gt;&lt;a href=&quot;images/pdf/publicacaoes/claudio/VI_obcecado_censura_VE.pdf&quot; target=&quot;_blank&quot;&gt;&lt;span style=&quot;text-decoration: underline;&quot;&gt;&lt;/span&gt;&lt;/a&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/VI_obcecado_censura_VE.pdf&quot; target=&quot;_blank&quot;&gt;O Estado ditatorial militar&lt;/a&gt;&lt;strong&gt;&lt;a href=&quot;images/pdf/publicacoes/claudio/VI_obcecado_censura_VE.pdf&quot; target=&quot;_blank&quot;&gt; &amp;ndash; Parte VI : Obcecado pela censura&lt;/a&gt;&lt;br /&gt;&lt;br /&gt;&lt;/strong&gt;&lt;/p&gt;
